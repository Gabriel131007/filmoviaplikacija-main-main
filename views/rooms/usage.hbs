<a href="/rooms/sign_in/{{room_id}}"
   class="text-2xl text-center font-bold bg-slate-600 text-white p-2 mb-4 block">Dodaj moje podatke</a>

<div class="grid grid-cols-2 gap-2">
    <div class="text-lg font-bold bg-slate-300 p-2">Korisnik</div>
    <div class="text-lg font-bold bg-slate-300 p-2">Pogledano</div>
</div>

{{#each items}}
<div class="grid grid-cols-2 gap-2">
    <div class="p-2">
        {{name}}
    </div>
    <div class="p-2">
        <label>
            <input type="checkbox" name="watched_{{id}}" value="1" {{#if watched}}checked{{/if}} />
            
        </label>
    </div>
</div>
{{/each}}

